{
  "name": "vnrld/sample",
  "description": "description_text",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Lukas Dabkowski",
      "email": "ld@vnr.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ComposerScripts\\": "."
    }
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "vnrld/lib1",
        "version": "@dev",
        "type": "my-plugin",
        "source": {
          "url": "https://github.com/vnrld/lib1.git",
          "type": "git",
          "reference": "origin/master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vnrld/lib2",
        "version": "@dev",
        "type": "my-plugin",
        "source": {
          "url": "https://github.com/vnrld/lib2.git",
          "type": "git",
          "reference": "origin/master"
        }
      }
    }
  ],
  "extra": {
    "installer-types": [
      "my-plugin"
    ],
    "installer-paths": {
      "plugins/{$name}": [
        "type:my-plugin"
      ]
    },
    "merge-plugin": {
      "include": [
        "plugins/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": true,
      "merge-scripts": true
    }
  },
  "require": {
    "ext-json" : "*",
    "vnrld/lib1": "@dev",
    "vnrld/lib2": "@dev",
    "composer/installers": "1.7.*",
    "oomphinc/composer-installers-extender": "1.1.*",
    "wikimedia/composer-merge-plugin": "^1.4"
  },
  "scripts": {
    "post-package-install": [
      "ComposerScripts\\Executor::processDependencies"
    ],
    "post-package-update": [
      "ComposerScripts\\Executor::processDependencies"
    ],
    "post-autoload-dump" : [
      "ComposerScripts\\Executor::removeUnwantedComposerFiles"
    ]
  }
}
